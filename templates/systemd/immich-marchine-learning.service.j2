[Unit]
Description=immich marchine learning ({{ immich_marchine_learning_identifier }})
{% for service in immich_systemd_required_services_list %}
Requires={{ service }}
After={{ service }}
{% endfor %}
DefaultDependencies=no

[Service]
Type=simple
Environment="HOME={{ devture_systemd_docker_base_systemd_unit_home_path }}"
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop --time={{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ immich_marchine_learning_identifier }} 2>/dev/null || true'
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ immich_marchine_learning_identifier }} 2>/dev/null || true'

ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} create \
                --rm \
                --name={{ immich_marchine_learning_identifier }} \
                {% if immich_hardware_acceleration == 'cuda' %}
                --device=/dev/nvidia0:/dev/nvidia0 \
                {% endif %}
                --log-driver=none \
                --cap-drop=ALL \
                --label-file={{ immich_base_path }}/labels-api \
                --network={{ immich_container_network }} \
                --mount type=bind,src={{ immich_machine_learning_cache_path }},dst=/cache \
                --env-file={{ immich_base_path }}/env \
                {% if immich_marchine_learning_container_extra_arguments | length > 0 %}
                {{ immich_marchine_learning_container_extra_arguments | join(' ') }} \
                {% endif %}
                {{ immich_marchine_learning_container_image }}

{% for network in immich_marchine_learning_container_additional_networks %}
ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} network connect {{ network }} {{ immich_marchine_learning_identifier }}
{% endfor %}

ExecStart={{ devture_systemd_docker_base_host_command_docker }} start --attach {{ immich_marchine_learning_identifier }}

ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop --time={{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ immich_marchine_learning_identifier }} 2>/dev/null || true'
ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ immich_marchine_learning_identifier }} 2>/dev/null || true'
Restart=always
RestartSec=30
SyslogIdentifier={{ immich_marchine_learning_identifier }}

[Install]
WantedBy=multi-user.target
